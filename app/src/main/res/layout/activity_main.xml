<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:foregroundTint="#6e7178"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="200px"
            android:paddingEnd="50px"
            android:paddingRight="50px"
            android:text="Hi There!  ðŸ™‹"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="100px"
            android:paddingEnd="50px"
            android:paddingRight="50px"
            android:text="This setup is going to download and install NativeCore Services and will grant all necesary permissions."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="50px"
            android:paddingEnd="50px"
            android:paddingRight="50px"
            android:text="Shizuku is required for this setup, so make sure that you have Shizuku installed and enabled."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/mopt_web"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#6e7178"
            android:drawableTint="#6e7178"
            android:foregroundGravity="left|center_vertical"
            android:gravity="clip_vertical|left"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Other Options"
            android:textAllCaps="false"
            android:textColor="#6e7178"
            app:icon="@drawable/ic_baseline_expand_more_24"
            app:iconTint="#6e7178"
            app:strokeColor="#6e7178" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingBottom="10px">

            <Button
                android:id="@+id/cancle"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#6e7178"
                android:drawableTint="#6e7178"
                android:foregroundGravity="left|center_vertical"
                android:gravity="clip_vertical|left"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Get Shizuku"
                android:textAllCaps="false"
                android:textColor="#6e7178"
                app:icon="@drawable/ic_baseline_open_in_new_24"
                app:iconTint="#6e7178"
                app:strokeColor="#6e7178" />

            <Button
                android:id="@+id/agree"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>